{% style %}
  {% assign desktop = section.settings.desktop_spacing | split :',' %}
  {% assign mobile = section.settings.mobile_spacing | split :',' %}
  .section--{{section.id}}{
    padding-top:{{desktop.first}};
    padding-bottom:{{desktop.last}};
  }
  @media(max-width:767px){
    .section--{{section.id}}{
        padding-top:{{mobile.first}};
        padding-bottom:{{mobile.last}};
      }
  }
{% endstyle %}
<div class="reviews__section section--{{ section.id }}">
  <div class="reviews__main">
    <div class="container">
      <div class="review__slider">
        <div class="review__wrapper">
          {% for block in section.blocks %}
            <div class="review_slide">
              <div class="review__slide__content">
                <div class="review__slide_stars">
                  {% for i in (1..block.settings.stars) %}
                    <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M8.43625 1.35577C9.0554 0.0270975 10.9446 0.0270965 11.5637 1.35577L13.0026 4.4436C13.254 4.98311 13.7658 5.35492 14.3566 5.4273L17.7379 5.84158C19.1929 6.01983 19.7767 7.81657 18.7044 8.816L16.2123 11.1387C15.7769 11.5445 15.5814 12.1461 15.6952 12.7303L16.346 16.0742C16.6261 17.513 15.0977 18.6235 13.8159 17.9125L10.8368 16.2601C10.3163 15.9714 9.68372 15.9714 9.16321 16.2601L6.18415 17.9125C4.90227 18.6235 3.37388 17.513 3.65395 16.0742L4.30485 12.7303C4.41857 12.1461 4.2231 11.5445 3.78768 11.1387L1.29562 8.816C0.223307 7.81657 0.807103 6.01983 2.26207 5.84158L5.64342 5.4273C6.23421 5.35492 6.74596 4.98311 6.99736 4.4436L8.43625 1.35577Z" fill="#FFB547"/>
                    </svg>
                  {% endfor %}
                </div>
                <div class="review__slide_title">
                  <h2 class="review__heading">{{ block.settings.title }}</h2>
                </div>
                <div class="review__slide__text">{{ block.settings.text }}</div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Reviews",
  "settings": [
    {
      "type": "text",
      "label": "Desktop Spacing",
      "id": "desktop_spacing",
      "info": "Add Spacing for top and bottom",
      "default": "0px,0px",
      "placeholder": "20px,30px"
    },
    {
      "type": "text",
      "label": "Mobile Spacing",
      "id": "mobile_spacing",
      "info": "Add Spacing for top and bottom",
      "default": "0px,0px",
      "placeholder": "15px,12px"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "review",
      "settings": [
        {
          "type": "range",
          "id": "stars",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "stars",
          "default": 5
        },
        {
          "type": "text",
          "id": "title",
          "label": "Add heading"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Add Review Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews"
    }
  ]
}
{% endschema %}
