{% if section.blocks.size > 0 %}
  <div class="cu-blog-box-row">
    <div class="page-width">
      <div class="cu-blog-box-inner-row">
        <h5 class="tabs--top--title">{{ section.settings.text }}</h5>
        <h3 class="tabs--top--heading">{{ section.settings.heading }}</h3>
        <div class="cu-blog-box--column">
          {% for block in section.blocks %}
            <div class="cu-blog-box-column-item">
              <div class="cu-blog-box-column-item-inner">
                {% if block.settings.image %}
                  <div class="cu-blog-box-column-item-image">
                    <img src="{{ block.settings.image | img_url:'master' }}">
                    <a class="hover-icon" href="{{ block.settings.link }}">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="20px" width:="20px">
                        <path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"/>
                      </svg>
                    </a>
                  </div>
                {% endif %}
                {% if block.settings.text != '' %}
                  <div class="cu-blog-box-column-item-content">
                    {% if block.settings.date != '' %}
                      <div class="column-item-content-date">{{ block.settings.date }}</div>
                    {% endif %}
                    <div class="column-item-content-text">
                      {{ block.settings.text }}
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
{
  "name": "Cu blogs box",
  "settings": [
     {
        "type": "text",
        "id": "text",
        "label": "Title",
        "default":"ON THE BLOG"
     },
     {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "More Education & Inspiration"
     }
  ],
  "blocks":[
    {
      "type" : "blog",
      "name" : "Blog",
      "settings" : [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "date",
            "label": "Date"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
       ]
    }
  ],
  "presets" : [
    {
      "name" : "Cu blogs box"
    }
  ]
}
{% endschema %}
<style>
  .cu-blog-box-row {
      padding: 60px 0;
  }
  .cu-blog-box--column {
      display: flex;
      align-items: stretch;
      flex-wrap: wrap;
  }
  .cu-blog-box-inner-row {
      text-align: center;
  }
  .cu-blog-box-column-item-inner {
      height: 100%;
      text-align: center;
      transition: ease-in-out.3s;
      box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
  }

  .cu-blog-box--column {
      justify-content: space-between;
  }
  .cu-blog-box-column-item {
      padding: 0 12px;
  }
  .cu-blog-box-column-item-content {
      padding: 35px;
  }

  .cu-blog-box-column-item-image {
      position: relative;
  }

  .cu-blog-box-column-item-image .hover-icon {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto;
      display: flex;
      align-items: center;
      background: white;
      width: 45px;
      height: 45px;
      justify-content: center;
      border-radius: 60px;
      transition: ease-in-out.3s;
      z-index: 2;
      opacity: 0;
      cursor: pointer;
  }

  .cu-blog-box-column-item-image:after {
      position: absolute;
      content: '';
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: all .3s;
      background-image: linear-gradient(60deg, #0039e3 34%, #8600d4 100%);
      background-color: transparent;
  }

  .cu-blog-box-column-item-image img {
      height: 300px;
      width: 100%;
      max-width: 100%;
      object-fit: cover;
      margin: 0 !important;
      transition: ease-in-out.3s;
  }


  .cu-blog-box--column {
      margin-top: 40px;
  }

  .column-item-content-text p {
      font-size: 16px;
      line-height: 1.4;
      font-weight: 700;
  }

  .column-item-content-text p a {
      color: black;
  }

  .column-item-content-date {
      font-size: 16px;
      margin-bottom: 7px;
      color: #444444;
  }

  .cu-blog-box-column-item-inner:hover:after {
      opacity: .3;
  }
  .cu-blog-box-column-item-inner:hover .cu-blog-box-column-item-image:after {
      opacity: 0.3;
  }
  .cu-blog-box-column-item-inner:hover .hover-icon {
      opacity: 1;
  }

  .cu-blog-box-column-item-inner:hover .cu-blog-box-column-item-image img {
      transform: scale(1.1);
  }

  .cu-blog-box-column-item-image {
      overflow: hidden;
  }

  .cu-blog-box-column-item-inner:hover {}

  .cu-blog-box-column-item-inner:hover {
      transform: translateY(-3px);
  }
  .column-item-content-text p a:hover {
      color: #2ff1ed;
  }

  .column-item-content-text * {
      transition: 0.3s ease;
  }
  @media (min-width: 750px) {
    .cu-blog-box-column-item {
        flex: 0 0 auto;
        width: 33.33333333%;
    }
  }
  @media (max-width: 800px) {

  }
  @media (max-width:800px){
    .cu-blog-box-row {
        padding: 20px 0;
    }
    .cu-blog-box--column {
        margin-top: 20px;
    }
  }
</style>
