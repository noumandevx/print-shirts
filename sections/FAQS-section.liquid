<div class="faqs-section-row">
    <div class="faqs-section-container page-width">
        <div class="faqs-section-inner-row">
            <div class="faqs-section-inner-row-col">
                {% for block in section.blocks %}
                    <div class="faqs-section-inner-row-col-show-and-scroll">
                        <div class="faqs-section-inner-row-col-show">
                            {% if block.settings.main-text != blank %}
                                <div class="faqs-section-inner-row-col-show-title">
                                    <p>{{ block.settings.main-text }}</p>
                                </div>
                            {% endif %}
                            <div class="faqs-section-inner-row-col-show-icons">
                                <div class="faqs-section-inner-row-col-show-icons-minus">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" version="1.1" id="Capa_1" width="20px" height="20px" viewBox="0 0 459.313 459.314" xml:space="preserve">
                                        <g>
                                            <path d="M459.313,229.648c0,22.201-17.992,40.199-40.205,40.199H40.181c-11.094,0-21.14-4.498-28.416-11.774   C4.495,250.808,0,240.76,0,229.66c-0.006-22.204,17.992-40.199,40.202-40.193h378.936   C441.333,189.472,459.308,207.456,459.313,229.648z"/>
                                        </g>
                                    </svg>
                                </div>
                                <div class="faqs-section-inner-row-col-show-icons-plus">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" version="1.1" id="Capa_1" width="20px" height="20px" viewBox="0 0 45.402 45.402" xml:space="preserve">
                                        <g>
                                            <path d="M41.267,18.557H26.832V4.134C26.832,1.851,24.99,0,22.707,0c-2.283,0-4.124,1.851-4.124,4.135v14.432H4.141   c-2.283,0-4.139,1.851-4.138,4.135c-0.001,1.141,0.46,2.187,1.207,2.934c0.748,0.749,1.78,1.222,2.92,1.222h14.453V41.27   c0,1.142,0.453,2.176,1.201,2.922c0.748,0.748,1.777,1.211,2.919,1.211c2.282,0,4.129-1.851,4.129-4.133V26.857h14.435   c2.283,0,4.134-1.867,4.133-4.15C45.399,20.425,43.548,18.557,41.267,18.557z"/>
                                        </g>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class="faqs-section-inner-row-col-hide">
                            {{ block.settings.scroll-text }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<style>
    .faqs-section-row {
        width: 100%;
        padding: 30px 0 80px 0;
    }
    .faqs-section-container {
        width: 100%;
    }
    .faqs-section-inner-row {
        width: 100%;
    }
    .faqs-section-inner-row-col {
        width: 100%;
    }
    .faqs-section-inner-row-col-show-and-scroll {
        background: #f9f9f9;
        width: 100%;
        padding: 0 20px;
        margin: 0 0 5px 0;
    }
    .faqs-section-inner-row-col-show {
        width: 100%;
        padding: 20px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .faqs-section-inner-row-col-hide {
        width: 70%;
        padding: 0 0 20px 0;
        display: none;
    }
    .faqs-section-inner-row-col-show-title p {
        color: #000;
        font-size: 19px !important;
        line-height: 1.2 !important;
        font-weight: 600;
    }
    .faqs-section-inner-row-col-hide p {
        line-height: 1.5;
    }
    .faqs-section-inner-row-col-show-and-scroll.show .faqs-section-inner-row-col-hide {
        display: block;
    }
    .faqs-section-inner-row-col-show-and-scroll .faqs-section-inner-row-col-hide {
        display: none;
    }
    .faqs-section-inner-row-col-show-title {
        width: 95%;
    }
    .faqs-section-inner-row-col-show:hover .faqs-section-inner-row-col-show-title p {
        color: #2ff1ed;
    }
    .faqs-section-inner-row-col-show:hover {
        cursor: pointer;
    }
    .faqs-section-inner-row-col-show-and-scroll.show .faqs-section-inner-row-col-show .faqs-section-inner-row-col-show-title p {
        color: #2ff1ed;
    }
    .faqs-section-inner-row-col-show-and-scroll.show .faqs-section-inner-row-col-show .faqs-section-inner-row-col-show-icons .faqs-section-inner-row-col-show-icons-minus {
        display: block;
    }
    .faqs-section-inner-row-col-show-icons-minus {
        display: none;
    } 
    .faqs-section-inner-row-col-show-and-scroll.show .faqs-section-inner-row-col-show .faqs-section-inner-row-col-show-icons .faqs-section-inner-row-col-show-icons-plus {
        display: none;
    }   
    .faqs-section-inner-row-col-show-icons-minus {
        border: 1px solid black;
        border-radius: 50px;
        padding: 5px;
    }
    .faqs-section-inner-row-col-show-icons-plus {
        border: 1px solid black;
        border-radius: 50px;
        padding: 5px;
    }
    .faqs-section-inner-row-col-show-icons-plus svg, .faqs-section-inner-row-col-show-icons-minus svg {
        width: 100%;
        max-width: 15px;
        height: auto;
    }
    @media screen and (max-width:768px){
        .faqs-section-row {
            padding: 30px 0;
        }
        .faqs-section-inner-row-col-hide {
            width: 90%;
        }
    }
</style>
<script>
    $(document).ready(function() {
        $(".faqs-section-inner-row-col-show").click(function() {
            if($(this).parent().hasClass('show')) {
                $(this).parent().removeClass('show');
            } else {
                $(this).parent().addClass('show');
            }
        });
    });
</script>
{% schema %}
{
  "name": "FAQS section",
  "settings": [
    
  ],
  "blocks": [
     {
       "name": "FAQS section",
       "type": "slide",
       "settings": [
        {
            "type": "text",
            "id": "main-text",
            "label": "Main text"
          },
          {
              "type": "richtext",
              "id": "scroll-text",
              "label": "Scroll text"
          }
       ]
     }
  ],
  "presets": [
    {
      "name": "FAQS section",
    }
  ]
}
{% endschema %}