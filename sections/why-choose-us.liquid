{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="multicolumn color-{{ section.settings.color_scheme }} gradient">
  <div
    class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <section class="why-choose-us">
      <h2>{{ section.settings.section_title }}</h2>
      {% if section.settings.section_subtitle != '' %}
        <p>{{ section.settings.section_subtitle }}</p>
      {% endif %}
      <div class="features">
        {% for block in section.blocks %}
          <div class="feature">
            <div class="feature-content">
              <h3>{{ block.settings.feature_title }}</h3>
              <p>{{ block.settings.feature_description }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  </div>
</div>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Why Choose Us?"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "We provide top-notch services with quality, efficiency, and customer satisfaction in mind."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title",
          "default": "Quality Assurance"
        },
        {
          "type": "textarea",
          "id": "feature_description",
          "label": "Feature Description",
          "default": "We ensure high-quality products and services with rigorous testing."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us"
    }
  ]
}
{% endschema %}

<style>
  .why-choose-us {
    text-align: center;
    padding: 40px 20px;
    background-color: #f9f9f9;
  }
  .why-choose-us h2 {
    font-size: 36px;
    margin-bottom: 10px;
    color: #000; /* Black text color for heading */
  }
  .why-choose-us p {
    font-size: 18px;
    color: #000; /* Black text color for subtitle */
    max-width: 600px;
    margin: 0 auto;
  }
  .features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
  }
  .feature {
    position: relative;
    min-width: 200px;
    width: 30%;  /* 5 items per row, 100% / 5 = 20%, subtracting space between */
    /* min-height: 200px;  /* Minimum height */ */
    background: #fff;
    border-radius: 15px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Ensure that content fills the height */
    padding: 20px;
    text-align: center; /* Center the text */
    cursor: pointer;
  }
  .feature:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }
  .feature-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex-grow: 1; /* Allow content to stretch vertically */
    color: #000; /* Black text color */
  }
  .feature h3 {
    font-size: 24px;
    margin-bottom: 10px;
    color: #000; /* Black text color for feature title */
  }
  .feature p {
    font-size: 16px;
    color: #000; /* Black text color for feature description */
  }

  @media (max-width: 768px) {
    .features {
      flex-direction: column;
      align-items: center;
    }
    .feature {
      width: 100%;  /* 100% width on smaller screens */
      /* margin-bottom: 20px; */
    }
    .why-choose-us {
      padding: 20px 20px;
    }
  }
</style>
